<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @task.title %></h1>

    <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this task
    <% end %>
  </div>

    <p class="bg-light border p-2 rounded-2"><%= @task.details %></p>

    <% if @task.completed %>
      <i class="fa-solid fa-square-check"></i> This task has been completed!</p>
    <% else %>
      <p>This task is not completed yet.</p>
    <% end %>

    <hr>
    <%= link_to "Delete this task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <%= link_to "Back to all tasks", tasks_path%>
  </div>
</div>
